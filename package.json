{
  "name": "markdownhub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf .next",
    "dev-server": "next dev",
    "dev": "run-s clean dev-server",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:pull": "drizzle-kit introspect:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio --host localhost --port 4000",
    "db:check": "drizzle-kit check:sqlite",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json,mjs}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,md,json,mjs}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^0.3.4",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.41.0",
    "@trpc/next": "^10.41.0",
    "@trpc/react-query": "^10.41.0",
    "@trpc/server": "^10.41.0",
    "autoprefixer": "10.4.16",
    "better-sqlite3": "^9.0.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "eslint": "8.52.0",
    "next": "^13.5.6",
    "next-auth": "^4.24.3",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "^2.1.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.6",
    "@types/node": "20.8.7",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "eslint-config-next": "^13.5.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tsx": "^3.14.0"
  }
}

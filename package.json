{
  "name": "markdownhub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf .next",
    "dev-server": "next dev",
    "dev": "run-s clean dev-server",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:pull": "drizzle-kit introspect:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio --host localhost --port 4000",
    "db:check": "drizzle-kit check:sqlite",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,md,json}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "@auth/core": "^0.16.0",
    "@auth/drizzle-adapter": "^0.3.2",
    "@t3-oss/env-nextjs": "^0.6.1",
    "@tanstack/react-query": "^4.35.3",
    "@trpc/client": "^10.38.5",
    "@trpc/next": "^10.38.5",
    "@trpc/react-query": "^10.38.5",
    "@trpc/server": "^10.38.5",
    "autoprefixer": "10.4.14",
    "better-sqlite3": "^8.6.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "eslint": "8.43.0",
    "next": "~13.5.3",
    "next-auth": "^4.23.1",
    "postcss": "8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "^1.13.3",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.6",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/node": "20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/better-sqlite3": "^7.6.5",
    "eslint-config-next": "~13.5.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "tsx": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4"
  }
}
